.container(style='margin-top:40px')
  .row(ui-view="login")
    .col-sm-6.col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          strong  Enter your Alias and where you voted from!
          br
        .panel-body
          form(ng-submit="submitForm()")
            fieldset
              .row
                .col-sm-12.col-md-10.col-md-offset-1
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                      input.form-control(ng-model='form.user' placeholder='Enter your alias', name='loginname', type='text', autofocus='')
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.glyphicon.glyphicon-lock
                      select.form-control(ng-model='form.location' placeholder='Pick your location')
                        option(value='redmondsf') Redmond
                        option(value='indiasf') India
                  .form-group
                    input.btn.btn-lg.btn-primary.btn-block(type='submit', value='Sign in')
        .panel-footer
          ul(ng-repeat="x in error track by $index")
            {{x}}
